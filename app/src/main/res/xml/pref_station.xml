<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="show_stats"
        android:defaultValue="false"
        android:title="@string/show_stats"
        />

    <ListPreference
        android:key="future_departure_limit"
        android:title="@string/future_departure_limit"
        android:entries="@array/future_departure_limit_list"
        android:entryValues="@array/future_departure_limit_values"
        android:defaultValue="60"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="departure_offset"
        android:title="@string/departure_offset"
        android:entries="@array/departure_offset_list"
        android:entryValues="@array/departure_offset_values"
        android:defaultValue="0"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
